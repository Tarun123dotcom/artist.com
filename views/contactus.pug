doctype html
html 
    head
        title Artist | Contact Us
        style 
            include style3.css 
        
        body 
            div#logo
                img(src="https://thumbs.dreamstime.com/b/artist-text-logo-paint-brush-black-colour-flat-minimal-vector-logo-style-artist-text-logo-paint-brush-black-164108116.jpg", alt="logo")
            nav#navbar
                ul 
                        
                    li#home #[a(href="/") Home]
                    li#about #[a(href="about") About]
                    li#contact #[a(href="/contactus") Contact Us]
                    li#login #[a(href="/login") Log in]
            div.container
                h1 Contact Us 
                form(action="/contactus" method = "post" class="myForm") 
                    label(for="Name",id="lableforname",class="label") Name: #[input(type="text", class="myInput", name="name", placeholder="Enter Your Name", id="Name")]
